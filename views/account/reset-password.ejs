<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/forms.css" />
  <%- include("../layouts/partials/head") %>
</head>

<body>
  <%- include('../layouts/partials/header') %>

  <h1><%= title %></h1>

  <% if (errors && errors.length > 0) { %>
    <ul class="notice">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <% if (message) { %>
    <p class="notice"><%= message %></p>
  <% } %>

  <div class="form-wrapper login-form-wrapper">
    <form class="form-container" method="post" action="/account/reset-password" novalidate>
      <label for="accountEmail">Enter your email address:</label>
      <input
        type="email"
        id="accountEmail"
        name="account_email"
        required
        value="<%= typeof account_email !== 'undefined' && account_email ? account_email : '' %>"
      >
      <button type="submit">Send Reset Link</button>
    </form>
  </div>

  <%- include('../layouts/partials/footer') %>
</body>
</html>
