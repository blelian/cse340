<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../layouts/partials/head') %>
</head>
<body>
  <%- include('../layouts/partials/header') %>

  <main>
    <h1><%= title %></h1>
    <% if (users.length === 0) { %>
      <p>No users found.</p>
    <% } else { %>
      <table>
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><%= user.account_firstname %></td>
              <td><%= user.account_lastname %></td>
              <td><%= user.account_email %></td>
              <td><%= user.account_type %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </main>

  <%- include('../layouts/partials/footer') %>
</body>
</html>
